<%- include('partials/header') %>
<div class="form-container">
  <h2>Register - Step 1</h2>
  <% if (error) { %>
    <div class="error"><%= error %></div>
  <% } %>
  <form action="/auth/register" method="POST">
    <label>First Name:</label>
    <input type="text" name="firstName" value="<%= values.firstName || '' %>" required>
    <label>Last Name:</label>
    <input type="text" name="lastName" value="<%= values.lastName || '' %>" required>
    <label>Address:</label>
    <input type="text" name="address" value="<%= values.address || '' %>" required>
    <label>Number:</label>
    <input type="text" name="number" maxlength="10" value="<%= values.number || '' %>" required>
    <button type="submit">Next</button>
  </form>
</div>
<script>
  const clickSound = new Audio('/click.mp3');
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('button').forEach(btn => {
      btn.addEventListener('click', function() {
        clickSound.currentTime = 0;
        clickSound.play();
      });
    });
  });
</script>
<%- include('partials/footer') %>